<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Marketing Insights</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Social Media Marketing Insights</h1>
        
        <div class="input-section">
            <input type="text" id="url-input" placeholder="Enter social media URL">
            <select id="platform-select">
                <option value="youtube">YouTube</option>
                <option value="instagram">Instagram</option>
                <option value="tiktok">TikTok</option>
                <option value="facebook">Facebook</option>
            </select>
            <select id="export-format">
                <option value="">No Export</option>
                <option value="excel">Excel</option>
                <option value="json">JSON</option>
                <option value="csv">CSV</option>
            </select>
            <button id="analyze-btn">Analyze Comments</button>
        </div>

        <div class="results-container">
            <div class="insights-summary">
                <h2>Key Insights</h2>
                
                <div class="insight-section product-suggestions">
                    <h3>Product Suggestions</h3>
                    <div class="suggestions-list"></div>
                </div>

                <div class="insight-section improvement-ideas">
                    <h3>Improvement Ideas</h3>
                    <div class="improvements-list"></div>
                </div>

                <div class="insight-section content-feedback">
                    <h3>Content Feedback</h3>
                    <div class="feedback-list"></div>
                </div>

                <div class="insight-section trending-topics">
                    <h3>Trending Topics</h3>
                    <div class="topics-list"></div>
                </div>

                <div class="engagement-summary">
                    <h3>Engagement Overview</h3>
                    <div class="engagement-stats"></div>
                </div>
            </div>

            <div class="comments-container">
                <div class="comments-filter">
                    <button class="filter-btn active" data-filter="insightful">Insightful Comments</button>
                    <button class="filter-btn" data-filter="popular">Popular Comments</button>
                    <button class="filter-btn" data-filter="critical">Critical Feedback</button>
                    <button class="filter-btn" data-filter="enthusiastic">Enthusiastic Comments</button>
                </div>
                
                <div class="comments-section">
                    <div class="comments-list"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>
